<?xml version ="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jp.educure.wordbook_app.mapper.UserMapper">


    <select id="findAllUser" resultType="jp.educure.wordbook_app.entity.User">
        SELECT * FROM users
    </select>

    <select id="findByIdUser" resultType="jp.educure.wordbook_app.entity.User">
        SELECT * FROM users 
        WHERE user_id =#{id}
    </select>

    <select id="findByEmail" resultType="jp.educure.wordbook_app.entity.User">
        SELECT * FROM users 
        WHERE email =#{email}
    </select>

    <insert id="insert" parameterType="jp.educure.wordbook_app.entity.User">
        INSERT INTO users (email,user_name,role)
        VALUES (#{email},#{userName},#{role})
    </insert>

    <delete id="delete">
        DELETE FROM users 
        WHERE user_id = #{id}
    </delete>
</mapper>